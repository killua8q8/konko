meta(charset='utf-8')
meta(http-equiv='X-UA-Compatible' content='IE=edge,chrome=1')
meta(name='description' content='#{description}')
meta(name='keywords' content='#{keywords}')
meta(name='fragment' content='!')
meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
title= title
base(href='/')

link(rel='shortcut icon' sizes='16x16 24x24 32x32 48x48 64x64' href='#{protocol}://#{host}/favicon.ico')
link(rel='apple-touch-icon-precomposed' sizes='152x152' href='favicons/favicon-152.png')
link(rel='apple-touch-icon-precomposed' sizes='144x144' href='favicons/favicon-144.png')
link(rel='apple-touch-icon-precomposed' sizes='57x57' href='favicons/favicon-57.png')
link(rel='icon' sizes='228x228' href='favicons/favicon-228.png')
link(rel='icon' sizes='32x32' href='favicons/favicon-32.png')
meta(name='apple-mobile-web-app-capable' content='yes')
meta(name='apple-mobile-web-app-status-bar-style' content='black-translucent')
meta(name='application-name' content='#{title}')
meta(name='msapplication-TileImage' content='favicons/favicon-144.png')
meta(name='msapplication-TileColor' content='#FFBF6F')

style.
    [ng\:cloak], [ng-cloak], .ng-cloak {display: none !important;}

each c in css
    link(rel='stylesheet' type='text/css' href='#{c}')
